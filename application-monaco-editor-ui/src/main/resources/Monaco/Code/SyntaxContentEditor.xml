#if ($xcontext.action == 'edit')
$xwiki.jsx.use('Monaco.Code.SyntaxContentEditor')
$xwiki.ssx.use('Monaco.Code.SyntaxContentEditor')
{{html clean="false"}}
## We don't display a textarea, but an input so that the CodeMirror integration is not triggered
&lt;input id="monacocontentinput" type="text" name="content" value="$escapetool.xml("$!{edit.data.content}")" data-syntax="$escapetool.xml("$!{edit.data.syntax}")"&gt;&lt;/input&gt;
&lt;div id="monacoeditor"&gt;&lt;/div&gt;
{{/html}}
#end
{{/velocity}}</content>

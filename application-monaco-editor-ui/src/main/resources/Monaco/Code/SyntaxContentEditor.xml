require(['vs/editor/editor.main'], function() {
  // Create the editor
  var editor = monaco.editor.create(document.getElementById('monacoeditor'), {
    value: document.getElementById('monacocontentinput').getAttribute('value'),
    wordWrap: 'on',
    automaticLayout: true
  });

  var refreshTextarea = (function() {
    console.log("Dumping editor content");
    exportNotification = new XWiki.widgets.Notification("$services.localization.render('monaco.editor.exportingContent')");
    document.getElementById('monacocontentinput').setAttribute('value', editor.getValue());
    exportNotification.hide();
  });

  // Make sure that every time any action button is pressed, we intercept the call and put the content of the editor in the edition textarea
  document.observe('xwiki:actions:beforeSave', function(event) { refreshTextarea(); });
  document.observe('xwiki:actions:beforePreview', function(event) { refreshTextarea(); });
});</code>
